<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Agenda_Personal.ConfiguracionPage"
             Title="Configuración">

    <AbsoluteLayout>
        <Label Text="Configuración" FontSize="Large"
               AbsoluteLayout.LayoutBounds="0.5,0.1,150,50"
               AbsoluteLayout.LayoutFlags="PositionProportional" />
        <Switch x:Name="NotificacionesSwitch"
                Toggled="NotificacionesSwitch_Toggled"
                AbsoluteLayout.LayoutBounds="0.1,0.3,70,10"
                AbsoluteLayout.LayoutFlags="PositionProportional" />
        <Label Text="Activar Notificaciones"
               AbsoluteLayout.LayoutBounds="0.5,0.3,200,30"
               AbsoluteLayout.LayoutFlags="PositionProportional" />
        <Button Text="Cambiar Tema"
               Clicked="CambiarTema_Clicked"
               AbsoluteLayout.LayoutBounds="0.5,0.5,150,40"
               AbsoluteLayout.LayoutFlags="PositionProportional" />

    </AbsoluteLayout>
</ContentPage>