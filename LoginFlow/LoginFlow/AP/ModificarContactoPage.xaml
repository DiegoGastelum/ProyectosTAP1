<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginFlow.ModificarContactoPage"
             Title="Modificar Contacto">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Entry x:Name="NombreEntry" Placeholder="Nombre" />
            <Entry x:Name="TelefonoEntry" Placeholder="Teléfono" Keyboard="Telephone" />
            <Entry x:Name="CorreoEntry" Placeholder="Correo Electrónico" Keyboard="Email" />
            <Entry x:Name="DireccionEntry" Placeholder="Dirección" />

            <Button Text="Guardar Cambios" Clicked="GuardarCambios_Clicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
